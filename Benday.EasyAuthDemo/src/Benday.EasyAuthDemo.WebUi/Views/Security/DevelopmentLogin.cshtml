@model Benday.EasyAuthDemo.WebUi.Models.DevelopmentLoginModel

@{
    ViewData["Title"] = "Development Login";
}

<h2>Development Login</h2>

<h4>Log in using whatever user id and password you want.  It'll always succeed.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DevelopmentLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" value="tester@test.com" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KeepMeLoggedIn" class="control-label"></label>
                <input asp-for="KeepMeLoggedIn" class="form-control" />
                <span asp-validation-for="KeepMeLoggedIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
